---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/UNTo.png";
import personWorking from "@images/DCo.jpg";
import beforeAfter from "@images/student1.jpg";
import constructionWorkers from "@images/student2.jpg";
import aerialView from "@images/student3.jpg";
import usingTools from "@images/drogba.jpg";
import progressBuilding from "@images/student4.jpg";
import underConstruction from "@images/student5.jpg";
import { SITE } from "@data/constants";

interface Article {
  isRightSection: boolean;
  title: string;
  subTitle: string;
  btnExists?: boolean;
  btnTitle?: string;
  btnURL?: string;
  single?: boolean;
  img?: any;
  imgAlt?: string;
  imgOne?: any;
  imgOneAlt?: string;
  imgTwo?: any;
  imgTwoAlt?: string;
}

const articles: Article[] = [
  {
    isRightSection: true,
    title: "Explore Our Diverse Academic Programs",
    subTitle:
      "Discover a comprehensive range of degrees offered by Kiss D'Kiss to prepare you for a successful career. Whether you are interested in general studies, business, finance, sciences, information technology, or marketing, we have programs tailored to your academic and professional aspirations.",
    single: false,
    imgOne: blueprints,
    imgOneAlt: "Explore Our Diverse Academic Programs",
    imgTwo: personWorking,
    imgTwoAlt: "Explore Our Diverse Academic Programs",
  },
  {
    isRightSection: false,
    title: "Achieve Academic Excellence with Kiss D'Kiss",
    subTitle:
      "With our dedicated support and guidance, you will navigate your academic journey with confidence, from enrollment to graduation. Celebrate your achievements and prepare for a bright future with a degree from Kiss D'Kiss. Join our community of scholars and take the first step towards your academic success.",
    img: beforeAfter,
    imgAlt: "Achieve Academic Excellence with Kiss D'Kiss",
    btnExists: true,
    btnTitle: "Learn More",
    btnURL: "./products/a765",
  },
  {
    isRightSection: true,
    title: "Program Study and Graduations",
    subTitle:
      "At Kiss D'Kiss, we offer a diverse range of academic programs designed to help you achieve your educational goals and set the foundation for a successful career. Our comprehensive curriculum spans various fields of study, ensuring you find a program that aligns with your interests and ambitions.",
    single: false,
    imgOne: constructionWorkers,
    imgOneAlt: "Program Study and Graduations",
    imgTwo: aerialView,
    imgTwoAlt: "Program Study and Graduations",
  },
  {
    isRightSection: false,
    title: "Discover and Engage",
    subTitle:
      "At Kiss D'Kiss, we believe that education extends beyond the classroom. We offer a variety of activities and trips designed to help students acclimate to their new environment, make lasting connections, and experience the rich cultural diversity of the United States. From guided tours of local landmarks to organized group activities and excursions, we provide opportunities for students to explore, learn, and grow both academically and personally. Join us and make the most of your study abroad experience with engaging and enriching activities.",
    img: usingTools,
    imgAlt:
      "Helping Students Explore and Connect Through New Activities and Trips",
  },
  {
    isRightSection: true,
    title: "Embrace Your Future with Kiss D'Kiss",
    subTitle:
      "Kiss D'Kiss is dedicated to empowering students to reach their full potential while studying abroad. We offer comprehensive support, from personalized guidance in the application process to assisting with everyday needs and providing enriching experiences. Our goal is to ensure you not only succeed academically but also thrive in your new environment. Trust Kiss D'Kiss to be your partner on this transformative journey, helping you embrace a bright and promising future.",
    single: false,
    imgOne: progressBuilding,
    imgOneAlt: "Your Partner in Achieving Academic and Personal Success",
    imgTwo: underConstruction,
    imgTwoAlt: "Your Partner in Achieving Academic and Personal Success",
    btnExists: true,
    btnTitle: "Learn more",
    btnURL: "./products/b203",
  },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://kissdkiss.com/services",
    "url": "https://kissdkiss.com/services",
    "name": "Empowering students from around the world to pursue their dreams of studying in the U.S.",
    "description": "Empowering students from around the world to pursue their dreams of studying in the U.S.",
    "isPartOf": {
        "@type": "WebSite",
        "url": "https://kissdkiss.com",
        "name": "KissDKiss",
        "description": "Empowering students from around the world to pursue their dreams of studying in the U.S."
    },
    "inLanguage": "en-US"
  }}
>
  <!--MainSection is the introductory section of the page, it also contains a CTA button-->
  <MainSection
    title="Comprehensive Support for Your Study Abroad Journey"
    subTitle="At Kiss D'Kiss, we offer a wide range of services designed to ensure your success as you embark on your academic adventure in the United States. From visa assistance to university registration, TOEFL preparation, and accommodation support, our dedicated team provides personalized guidance every step of the way. Trust us to make your dream of studying in the U.S. a reality."
    btnExists={true}
    btnTitle="View Programs"
    btnURL="./products"
  />
  <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
  {
    articles.map(article => {
      return article.isRightSection ? (
        <RightSection
          title={article.title}
          subTitle={article.subTitle}
          single={article.single}
          imgOne={article.imgOne}
          imgOneAlt={article.imgOneAlt}
          imgTwo={article.imgTwo}
          imgTwoAlt={article.imgTwoAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      ) : (
        <LeftSection
          title={article.title}
          subTitle={article.subTitle}
          img={article.img}
          imgAlt={article.imgAlt}
          btnExists={article.btnExists}
          btnTitle={article.btnTitle}
          btnURL={article.btnURL}
        />
      );
    })
  }
  <!--FeaturesStats section showcases essential stats valuable to users-->
  <FeaturesStats
    title="Our Success Rate"
    subTitle="At Kiss D'Kiss, we pride ourselves on our outstanding success rate in helping students realize their dreams of studying abroad. With a proven track record of 95% successful placements, we are committed to providing the highest quality of service and support. Our holistic approach and dedication to student success have resulted in continuous growth and an expanding network of satisfied students and alumni."
    mainStatTitle="95%"
    mainStatSubTitle="of our clients rate their experience with Kiss D'Kiss as exceptional"
    stats={[
      {
        stat: "96.8%",
        description: "completion rate",
      },
      {
        stat: "5,000+",
        description: "students over the years",
      },
      {
        stat: "85%",
        description: "obtaining student visa",
      },
    ]}
  />
</MainLayout>
